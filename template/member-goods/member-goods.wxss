.member-goods-item {
  margin-top: 80rpx;
}

.member-goods-item:first-child {
  margin-top: 0;
}

.image-container {
}

.member-goods-item .image-container {
  width: 100%;
  height: 388rpx;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.member-goods-item .image-container image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.item-belog-card {
  padding: 10rpx 24rpx;
  background: rgba(255, 216, 56, 1);
  border-radius: 0px 0px 20rpx 0px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0;
  left: 0;
}

.item-belog-card text {
  color: #333;
}

.member-goods-item .type-container {
  margin-top: 4rpx;
  margin-bottom: 15rpx;
}

.member-goods-item .type-item {
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  color: #fa4816;
  background: rgba(255, 148, 54, 0.2);
  margin-right: 10rpx;
  border-radius: 4rpx;
}

.member-goods-item .item-content {
}

.member-goods-item .item-content .item-title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1;
  color: #333;
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
}

.member-goods-item .item-content .item-title.textIndent {
  position: relative;
  left: -13rpx;
}

.member-goods-item .item-content .item-type {
  color: #ff9436;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.member-goods-item .item-footer {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}

.member-goods-item .item-shopAdd {
}

.member-goods-item .item-shopAdd text {
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
  display: block;
  white-space: nowrap;
  max-width: 500rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.member-goods-item .item-btn {
  position: relative;
  top: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 152rpx;
  height: 56rpx;
  background: linear-gradient(232deg, rgba(255, 148, 54, 1) 0%, rgba(255, 174, 58, 1) 100%);
  border-radius: 28rpx;
  color: #fff;
  font-size: 28rpx;
}
