/* pages/index/index.wxss */
@import "../../template/enter-loading/enter-loading.wxss";
@import "/template/member-goods/member-goods";
@import "/template/card-bg/card-bg";
@import "/template/loading/loading";
@import "/template/horizontal-loading/horizontal-loading";

page {
  background-color: #fff;
}

swiper {
  height: 502rpx;
  background-color: #fff;
  margin-bottom: 60rpx;
}

.play-card-container {
  position: relative;
  height: 502rpx;
}

.play-card-detail {
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.play-card-detail-box {
  position: absolute;
  top: 120rpx;
  left: 50rpx;
}

.play-card-bg {
  position: absolute;
  z-index: -1;
  top: 0;
  left: -20rpx;
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.play-card-head {
  position: relative;
  padding-right: 200rpx;
}

.play-card-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.play-card-desc {
  color: #333;
  font-size: 28rpx;
  display: block;
}

.play-card-price {
  padding-right: 20rpx;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  background-color: #ff953c;
  margin-top: 10rpx;
  display: inline-block;
  left: 40rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position-x: -10rpx;
  position: relative;
  z-index: 2;
}

.play-card-price .background-image {
  width: 100%;
  height: 60rpx;
  background-size: contain;
  background-repeat: no-repeat;
  position: absolute;
  left: -40rpx;
  top: 0;
  z-index: 1;
}

.play-card-price text {
  color: #fff;
  position: relative;
  z-index: 2;
}

.f24 {
  font-size: 24rpx;
}

.f36 {
  font-size: 36rpx;
}

.play-card-buy {
  background: #22323f;
  border-radius: 42rpx;
  color: #fff;
  font-size: 28rpx;
  width: 200rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  display: block;
  margin-top: 34rpx;
}

.play-card-buy text {
  color: #fff;
  font-size: 28prx;
}

.playcard-rights-list {
  display: flex;
  margin-top: 30rpx;
}

.playcard-rights-item {
  flex: 1;
  position: relative;
  text-align: center;
}

.playcard-rights-item .icon-container {
  width: 84rpx;
  height: 84rpx;
  position: relative;
  left: 50%;
  margin-left: -42rpx;
  border-radius: 50%;
  background: #ffdea0;
}

.playcard-rights-item .icon-container .iconfont {
  font-size: 70rpx;
  color: #ff9436;
  position: relative;
  top: 6rpx;
}

.playcard-rights-item-title {
  color: #999;
  font-size: 22rpx;
}

.cities-container, .list-container {
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.cities-container {
  white-space: nowrap;
  margin-bottom: 90rpx;
}

.cities-item {
  width: 120rpx;
  height: 160rpx;
  border-radius: 10rpx;
  position: relative;
  background-color: #999;
  display: inline-block;
  margin-right: 30rpx;
  background-size: 100% 100%;
}

.cities-item-bg {
  border-radius: 10rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-size: 100% 100%;
}

.citie-item-name {
  position: absolute;
  width: 100%;
  bottom: 10rpx;
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
  color: #fff;
}

.list-title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  align-items: center;
}

.special-swiper-num {
  font-size: 36rpx;
  color: #999;
}

.special-swiper-num text {
  font-size: 36rpx;
  color: #999;
}

.list-title.cityNavFixed {
  margin-bottom: 0;
}

.cities-list {
  margin-top: 40rpx;
  height: 184rpx;
}

.cities-list.paddingTop {
  padding-top: 80rpx;
}

.list-title.cityNavFixed {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #fff;
  height: 80rpx;
}

.goodsNavFixed {
  position: fixed;
  top: 80rpx;
  left: 0;
  z-index: 10;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #fff;
}

.list-title .title-text {
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  color: #333;
}

.list-title .more {
  display: flex;
  justify-content: center;
  align-items: center;
  /* margin-right: 20rpx; */
}

.list-title text {
  color: #ff9436;
  font-weight: 600;
}

.list-title .more-text {
  font-size: 28rpx;
  margin-right: 6rpx;
}

.list-title .iconright {
  font-size: 24rpx;
  position: relative;
  top: 2rpx;
}

.goods-tab {
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-bottom: 2rpx solid #ddd;
}

.goods-tab.goodsNavFixed .tab-item {
  /* height: 50rpx;
  line-height: 50rpx; */
}

.tab-item-tap {
  flex: 1;
  display: flex;
  justify-content: center;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tab-item {
  /* background-color: pink; */
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  position: relative;
  width: max-content;
  /* transition: all .3s; */
}

.tab-item .tab-item-text {
  color: #666;
  font-size: 24rpx;
}

.tab-item.active .bottom-border {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 8rpx;
  border-radius: 4rpx;
  background-color: #ff9436;
}

.tab-item.active .tab-item-text {
  color: #ff9436;
}

.recommendation-list {
  padding-bottom: 100rpx;
  margin-top: 44rpx;
}

