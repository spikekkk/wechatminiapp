.paystate {
    width: 600rpx;
    margin: 0 auto;
    margin-top: 190rpx;
    display: flex;
    flex-direction: column;
    background: #fff;
    border-radius: 20rpx;
}

.paystate .top {
    width: 100%;
    height: 172rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
}

.paystate .top .top-circle {
    border-radius: 50%;
    background: #fff;
    margin: -66rpx auto 8rpx;
}

.paystate .top .top-circle icon {
    margin: 12rpx;
}

.paystate .top .top-title {
    font-size: 32rpx;
    font-weight: bold;
    line-height: 32rpx;
    color: #333;
    margin: 0 auto;
}

.paystate .center {
    width: 540rpx;
    /*height: 330rpx;*/
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    /* padding-bottom: 60rpx; */
}

.paystate .center .center-title {
    font-size: 28rpx;
    line-height: 44rpx;
    vertical-align: top;
    font-weight: 600;
    color: #333;
    margin-top: 60rpx;
}

.paystate .center .category {
    height: 32rpx;
    margin-top: 32rpx;
    display: flex;
    justify-content: space-between;
}

.paystate .center .category .left {
    font-size: 28rpx;
    line-height: 28rpx;
    color: #999;
}

.paystate .center .category .right {
    font-size: 28rpx;
    line-height: 28rpx;
    color: #333;
}

.paystate .center .category:last-child .right {
    color: #ff5100;
}

.paystate .bottom {
    width: 100%;
    height: 170rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.paystate .bottom .bottom-btn {
    width: 520rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background: linear-gradient(
        322deg,
        rgba(255, 148, 54, 1) 0%,
        rgba(255, 188, 58, 1) 100%
    );
    font-size: 32rpx;
    line-height: 88rpx;
    color: #fff;
    text-align: center;
}

.paystate .bottom .bottom-btn:before {
    content: "";
    display: block;
    width: 20rpx;
    height: 20rpx;
    background: #ebecf0;
    transform: rotate(-45deg);
    position: absolute;
    top: -10rpx;
    left: -10rpx;
}

.paystate .bottom .bottom-btn:after {
    content: "";
    display: block;
    width: 20rpx;
    height: 20rpx;
    background: #ebecf0;
    transform: rotate(-45deg);
    position: absolute;
    top: -10rpx;
    right: -10rpx;
}

.bcgd {
    width: 100%;
    height: 247rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: -1;
}

.idcard {
    color: #999999ff;

    text-align: end;
    margin-top: 20rpx;
}

.have-card {
    border-top: 1rpx solid #dddddd;
    padding-top: 40rpx;
}
