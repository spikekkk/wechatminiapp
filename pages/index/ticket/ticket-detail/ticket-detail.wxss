.comment {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-bottom: 114rpx;
}

.comment .comment-top {
  width: 720rpx;
  height: 94rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.comment .comment-top .top-title {
  font-size: 28rpx;
  line-height: 32rpx;
  color: #333;
}

.comment .comment-top .top-title text {
  color: #ff7058;
}

.comment .comment-top .more-comment {
  font-size: 28rpx;
  line-height: 28rpx;
  color: #999;
  margin: auto 0 auto auto;
}

.comment .comment-content {
  width: 720rpx;
  margin-left: 30rpx;
  border-top: 1px solid #eee;
  display: flex;
  flex-direction: row;
  position: relative;
}

.comment .comment-content .user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-top: 32rpx;
}

.comment .comment-content .content {
  width: 552rpx;
  margin: 44rpx 38rpx 10rpx 30rpx;
  display: flex;
  flex-direction: column;
}

.comment .comment-content .content .nickname {
  font-size: 28rpx;
  font-weight: 600;
  line-height: 28rpx;
  color: #ff5100;
  margin-bottom: 12rpx;
}

.comment .comment-content .content .content-text {
  font-size: 24rpx;
  font-weight: 600;
  line-height: 40rpx;
  color: #333;
  padding-top: 26rpx;
  padding-bottom: 12rpx;
}

.comment .comment-content .content .content-img {
  margin-top: 8rpx;
  margin-bottom: 20rpx;
}

.comment .comment-content .content .content-img image {
  width: 172rpx;
  height: 172rpx;
  margin-right: 12rpx;
}

.comment .comment-content .comment-date {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

