.poster-dialog {
}

.canvas-container {
  width: 610rpx;
  height: 820rpx;
  position: fixed;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 112;
  border-radius: 20rpx;
  overflow: hidden;
}

.share-detail {
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  width: 100%;
  position: fixed;
  bottom: 250rpx;
  z-index: 111;
}

.share-detail .share-price {
  margin: 0 10rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  background-color: #ff4669;
  color: #fff;
}

.poster-btns {
  background-color: #fff;
  width: 100%;
  height: 200rpx;
  position: fixed;
  bottom: 0;
  z-index: 11111;
  left: 0;
  display: flex;
  border-radius: 70rpx 70rpx 0 0;
  overflow: hidden;
}

.poster-share, .poster-download {
  flex: 1;
  text-align: center;
}

.poster-btns text {
  font-size: 28rpx;
  color: #666;
}

.poster-share {
  background-color: #fff;
}

.poster-share text {
  position: relative;
  top: -20rpx;
}

.poster-share .poster-btns-icon image {
  width: 100%;
  height: 100%;
}

.poster-download .poster-btns-icon image {
  width: 100%;
  height: 100%;
}

.poster-btns-icon {
  margin-top: 20rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  position: relative;
  left: 50%;
  transform: translate(-50%, 0);
}

.poster-dialog .generateing {
  font-size: 50rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  z-index: 111;
}
