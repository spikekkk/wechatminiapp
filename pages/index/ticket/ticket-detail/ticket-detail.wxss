@import "/components/stars/stars-template.wxss";
@import "/components/enter-loading/enter-loading.wxss";

.arrow {
  width: 16rpx;
  height: 16rpx;
  color: #c7c7cc;
  margin: auto 30rpx auto 20rpx;
  border: 3rpx #c7c7cc solid;
  border-top-color: transparent;
  border-left-color: transparent;
  transform: rotate(-45deg);
}

.head {
  width: 100%;
  /*height: 508rpx;*/
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
}

.head .head-center {
  width: 710rpx;
  /*height: 154rpx;*/
  margin: 0 auto;
  border-bottom: 1px solid #eee;
}

.head .head-center .center-title {
  padding: 30rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  color: #333;
}

.head .head-center .center-detail {
  margin-top: 30rpx;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.head .head-center .center-detail .current-price {
  font-size: 44rpx;
  font-weight: bold;
  line-height: 32rpx;
  color: #ff5100;
  margin-right: 10rpx;
}

.head .head-center .center-detail .current-price text {
  font-size: 24rpx;
  color: #ff5100;
}

.head .head-center .center-detail .old-price {
  display: inline-block;
  font-size: 20rpx;
  line-height: 20rpx;
  padding: 6rpx 10rpx;
  border-radius: 16rpx;
  border: 2rpx solid #ff9436;
  color: #ff9436;
  background: rgba(255, 148, 54, 0.1);
  position: relative;
  top: -8rpx;
}

.head .head-center .center-detail .share-content {
  color: #a3a3a3;
  font-size: 22rpx;
}

.head .head-center .center-detail .count-box {
  position: relative;
  top: -20rpx;
  text-align: center;
  display: block;
}

.head .head-center .center-detail .count-box .text {
  color: #999;
  font-size: 24rpx;
}

.head .head-center .center-detail .count-box .progress-bar {
  margin-top: 12rpx;
  width: 241rpx;
  height: 12rpx;
  background: rgba(255, 148, 54, 0.2);
  border-radius: 7rpx;
  border: 1px solid #ff9436;
  position: relative;
}

.head .head-center .center-detail .count-box .progress-bar-line {
  width: 100rpx;
  height: 12rpx;
  position: absolute;
  top: 0;
  left: -2rpx;
  background: #ff9436;
  border-radius: 7rpx;
}

.head .head-bottom {
  width: 100%;
  height: 72rpx;
  padding-left: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-bottom: 20rpx;
}

.head .head-bottom .count-down {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
}

.head .head-bottom .count-down text {
  font-size: 20rpx;
  color: #fff;
  background-color: #555;
  padding: 4rpx;
}

.main {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-bottom: 20rpx;
}

.main .main-top {
  width: 720rpx;
  height: 90rpx;
  margin-left: 30rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.main .main-top image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 14rpx;
}

.main .main-top .top-title {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 32rpx;
  color: #333;
}

.main .main-top .scan-detail {
  font-size: 28rpx;
  line-height: 28rpx;
  color: #999;
  margin: auto 0 auto auto;
}

.main .main-center {
  width: 720rpx;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 30rpx;
  border-bottom: 1px solid #eee;
}

.main .main-center image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 14rpx;
}

.main .main-center .shop-adress {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 32rpx;
  color: #333;
}

.main .text-ellipsis {
  display: inline-block;
  max-width: 470rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.main .main-center .shop-distance {
  font-size: 28rpx;
  line-height: 28rpx;
  color: #999;
  margin: auto 30rpx auto auto;
}

.main .main-center .icon-phone {
  width: 100rpx;
  height: 60rpx;
  box-sizing: border-box;
  padding: 10rpx 30rpx;
  margin-right: 0;
}

.main .main-bottom {
  width: 720rpx;
  height: 90rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.main .main-bottom .icon-adress {
  width: 34rpx;
  height: 34rpx;
}

.main .main-bottom .bottom-title {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 32rpx;
  color: #333;
  margin-left: 20rpx;
}

.tips {
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-bottom: 32rpx;
  padding: 0 25rpx 100rpx 25rpx;
}

.tips .tips-list {
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #eee;
}

.tips .html-content {
}

.tips .tips-list:last-child {
  border: none;
}

.tips .tips-list .list-title {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #333;
  font-weight: 600;
  margin: 30rpx auto 30rpx 0;
}

.tips .tips-list text {
  font-size: 26rpx;
  color: #999;
}

.tips .tips-list text:last-child {
  margin-bottom: 30rpx;
}

