.head {
  background-color: #fff;
  white-space: nowrap;
  position: fixed;
  z-index: 10;
  top: 0;
  width: 100%;
  height: 88rpx;
  display: flex;
}

.head .head-item {
  width: 134rpx;
  height: 100%;
  align-items: center;
  justify-content: center;
  position: relative;
  display: flex;
  cursor: pointer;
}

.head .head-item .item-content {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  vertical-align: middle;
  position: relative;
}

.head .head-item .head-green-line {
  width: 90rpx;
  height: 8rpx;
  background: #ff9436;
  position: absolute;
  left: 50%;
  bottom: 0;
  margin-left: -46rpx;
}

.head .head-item .item-content .head-badge {
  min-width: 32rpx;
  height: calc(width);
  border-radius: 50%;
  padding: 1px;
  background: #ff7058;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 32rpx;
  position: absolute;
  top: -16rpx;
  right: -16rpx;
}

.general {
  width: 710rpx;
  height: 206rpx;
  margin: 0 auto 20rpx;
  display: flex;
  position: relative;
  background: #fff;
  border-radius: 10rpx;
}

.general .general-img {
  width: 136rpx;
  height: 136rpx;
  margin: 33rpx 0 auto 20rpx;
  border-radius: 10rpx;
}

.general .general-content {
  margin: 33rpx auto auto 20rpx;
  display: flex;
  flex-direction: column;
}

.general .general-content .content-title {
  width: 430rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #333;
  overflow: auto;
height:60rpx;

  /* margin-bottom: 44rpx; */
  /* white-space: nowrap;
  text-overflow: ellipsis; */
}

.general .general-content .content-target {
  width: 184rpx;
  height: 38rpx;
  background-color: #ffead7;
  border-radius: 4rpx;
  line-height: 38rpx;
  text-align: center;
  margin: 10rpx 0;
}

.general .general-content .content-target text {
  color: #ff9436;
  font-weight: 600;
  font-size: 24rpx;
}

.general .general-content .content-block-tip {
  font-size: 20rpx;
  color: #999;
  /* margin-bottom: 16rpx; */
}

.general .general-content .content-block-middle {
  margin-right: 10rpx;
  /* margin-left: 10rpx; */
}

.content-block text {
  font-size: 20rpx;
}

.content-block-detail {
  font-size: 20rpx;
}

.general .general-state {
  font-size: 24rpx;
  color: #ff7058;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.general .general-operate {
  height: 44rpx;
  border-radius: 22rpx;
  background: linear-gradient(232deg, rgba(255, 148, 54, 1) 0%, rgba(255, 174, 58, 1) 100%);
  display: flex;
  align-items: center;
  padding: 0 14rpx;
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}

.general .general-operate text {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #fff;
}

.empty-block {
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}

.empty-block .empty-img {
  width: 244rpx;
  height: 244rpx;
  margin: 0 auto 20rpx;
}

.empty-block .empty-text {
  font-size: 24rpx;
  color: #888;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.empty-block .empty-text text {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #888;
}
