@import "/components/enter-loading/enter-loading.wxss";

page {
  height: 100%;
}

.container {
  height: 100%;
}

.header {
  width: 100%;
  height: 220rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
  box-sizing: border-box;
  padding-top: 20rpx;
  padding-left: 30rpx;
  margin-bottom: 32rpx;
  position: relative;
}

.header .header-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.header .header-img image {
  width: 180rpx;
  height: 180rpx;
}

.header .center {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.header .center .title {
  width: 410rpx;
  font-size: 30rpx;
  font-weight: 600;
  line-height: 30rpx;
  height: 90rpx;
  color: #333;
  overflow-y: scroll;
  /* overflow: auto; 
   white-space: nowrap;
  text-overflow: ellipsis; */
}

.header .center .price {
  margin-top: 20rpx;
  display: flex;
  align-items: baseline;
}

.header .center .price .left {
  font-size: 44rpx;
  font-weight: 600;
  line-height: 32rpx;
  color: #ff5100;
}

.header .center .price .left .dollor {
  color: #ff5100;
  font-size: 24rpx;
}

.header .center .price .right {
  font-size: 20rpx;
  line-height: 20rpx;
  padding: 5rpx 10rpx;
  color: #ff5100;
  border: 1px solid #ff5100;
  border-radius: 16rpx;
  margin-left: 10rpx;
  position: relative;
  top: -3rpx;
}

.header .center .price .right text {
  width: 100%;
  height: 1px;
  background: #999;
  position: absolute;
  top: 48%;
  left: 0;
}

.header .center .sale-num {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.total-price {
  color: #999;
  font-size: 24rpx;
}

.header .right {
  /* margin: 0 20rpx 0 auto;
  display: flex;
  flex-direction: column; */
}

.header .state {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #27aedf;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.header .btn {
  width: 144rpx;
  height: 44rpx;
  background: #54ac41;
  border-radius: 22rpx;
  font-size: 24rpx;
  line-height: 44rpx;
  color: #fff;
  text-align: center;
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}

.content {
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}

.content .content-item {
  font-size: 24rpx;
  line-height: 92rpx;
  color: #666;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
}

.content .content-item .content-item-title {
  color: #333;
}

.btn-group {
  padding: 0 42rpx;
  margin-top: 80rpx;
  display: flex;
  flex-direction: row;
}

.btn-group .cancel-btn {
  width: 320rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  margin-right: 20rpx;
  color: #ff9436;
  border: 1px solid #ff9436;
}

.btn-group .continue-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  color: #fff;
  background: linear-gradient(322deg, rgba(255, 148, 54, 1) 0%, rgba(255, 188, 58, 1) 100%);
}

.content-target {
  width: 184rpx;
  height: 38rpx;
  background-color: #ffead7;
  border-radius: 4rpx;
  line-height: 38rpx;
  text-align: center;
  margin: 10rpx 0;
}

.content-target text {
  color: #ff9436;
  font-weight: 600;
  font-size: 24rpx;
}

.bottom-text-rules {
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.verifycode-container {
  width: 502rpx;
  height: 508rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  z-index: 31;
  text-align: center;
  overflow: hidden;
  border-radius: 20rpx;
}

.qrcode-container {
  /* background-color: #ededed; */
  position: relative;
  height: 380rpx;
}

.qrcode-container canvas {
  position: absolute;
  left: 50%;
  top: 58%;
  transform: translate(-50%, -50%);
}

.qrcode-text {
  font-size: 28rpx;
  color: #666;
  margin-top: 40rpx;
}
