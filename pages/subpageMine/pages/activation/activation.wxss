/* pages/mine/activation/activation.wxss */

.card-img {
  width: 100%;
  height: 360rpx;
}

/* page {
background-color: #ffffff;

} */

.card-img image {
  width: 100%;
  height: 100%;
}

.section__title {
  color: #999;
  font-size: 28rpx;
  line-height: 45rpx;
  width: 184rpx;
  /* padding-left: 20rpx; */
}

.active-form {
  background-color: #fff;
  /* padding: 0 40rpx; */
}

.active-form .input-box {
  /* position: relative; */
  display: flex;
  background-color: #fff;
  height: 92rpx;
  align-items: center;
  margin: 0 20rpx;
  /* padding: 20rpx 46rpx; */
}

.box-first {
  border-bottom: 1px solid #eee;
}

.placeholder-text {
  font-size: 28rpx;
  color: #ccc;
}

.check-box {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  align-items: center;
}

.cb {
  transform: scale(0.6, 0.6);
}

.block-title {
  margin: 0 20rpx;
  height: 92rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.block-title text {
  color: #333;
  font-size: 28rpx;
  line-height: 75rpx;
  /* padding-left: 20rpx; */
}

.chose-contact {
  font-size: 28rpx;
}

.chose-contact text {
  color: #666;
}

.chose-contact-text {
  margin-right: 10rpx;
}

.chose-contact .iconfont {
}

.member-block {
  margin-top: 26rpx;
}

.dec_info {
  padding: 0 20rpx;
  margin-top: 30rpx;
  margin-bottom: 60rpx;
}

.dec_txt {
  font-size: 24rpx;
  color: #999;
}

.active-form .input-box image {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.active-form .input-box input {
  color: #333;
  font-size: 28rpx;
}

.btn-primiray {
  /* padding:0 40rpx; */
  margin-top: 40rpx;
  width: 670rpx;
  height: 94rpx;
  line-height: 94rpx;
  background: linear-gradient(322deg, rgba(255, 148, 54, 1) 0%, rgba(255, 188, 58, 1) 100%);
  border-radius: 47rpx;
  text-align: center;
}

.btn-primiray text {
  color: #fff;
  font-size: 36rpx;
}

.dialog-success {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(1);
  z-index: 21;
  transition: transform 0.4s;
}

.dialog-success.scale {
  transform: translate(-50%, -50%) scale(0);
}

.dialog-success image {
  height: 680rpx;
}

.congratulation-title, .congratulation-content, .congratulation-btn {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  text-align: center;
}

.congratulation-title {
  top: 168rpx;
  color: #fff;
  font-size: 32rpx;
}

.congratulation-content {
  top: 320rpx;
  color: #e46a01;
  font-size: 32rpx;
}

.congratulation-btn {
  bottom: 100rpx;
  color: #fff;
  font-size: 36rpx;
  width: 405rpx;
  height: 94rpx;
  line-height: 94rpx;
  background: linear-gradient(322deg, rgba(255, 148, 54, 1) 0%, rgba(255, 188, 58, 1) 100%);
  border-radius: 47rpx;
}

.member-agree {
  color: rgba(255, 148, 54, 1);
}
