/* components/swiper-special/swiper-special.wxss */

.list-container {
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.list-title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  align-items: center;
}

.list-title .title-text {
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  color: #333;
}
.swiper-container{

}
.swiper-component{
  height: 600rpx;
}
.swiper-item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper-item-nav {
  width: 400rpx;
  border-radius: 24rpx;
  overflow: hidden;
  transform: scale(0.9);
  box-shadow: 0 4rpx 40rpx 0 rgba(128, 132, 153, 0.2);
  transition: all 0.9s;
}

.swiper-item-nav.active {
  transform: scale(1);
}

.swiper-item-top {
  width: 100%;
  height: 400rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.swiper-item-bottom {
  background-color: #fff;
  padding: 30rpx;
}

.swiper-item-bottom .txt {
  font-size: 28rpx;
  line-height: 34rpx;
}
